<body>
    <div class="container">
        <h1>URL Shortner</h1>
        <form action="/" method="post">
            <div>
                <label for="url">Enter URL</label>
                <input type="url" name="url" id="url" required></input>
            </div>
            <div>
                <label for="shortCode">Short Code</label>
                <input type="text" name="shortCode" id="shortCode" required></input>    
            </div>
            <button type="submit">Shorten</button>
        </form>
        <h2>Shortended URL</h2>
        <ul>
            <% if (links && links.length > 0) { %>
                <% links.forEach(function(link) { %>
                    <li>
                        <a href="/<%= link.shortCode %>" target="_blank">
                            http://<%= link.host %>/<%= link.shortCode %>
                        </a> â†’ <%= link.url %>
                    </li>
                <% }); %>
            <% } else { %>
                <li>No shortened URLs yet</li>
            <% } %>
        </ul>
    </div>
